<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"  <!-- Vertical orientation for arranging child elements -->
    android:layout_width="match_parent"  <!-- Full width of the parent container -->
    android:layout_height="match_parent"  <!-- Full height of the parent container -->
    android:background="@color/black_overlay">  <!-- Background color set to a custom color -->

    <!-- Material Toolbar at the top of the layout -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"  <!-- Unique ID for referencing in Java/Kotlin -->
        android:layout_width="match_parent"  <!-- Toolbar should span the full width -->
        android:layout_height="wrap_content"  <!-- Height wraps content (toolbar height based on title) -->
        android:background="@color/grey_toolbar"  <!-- Custom background color for the toolbar -->
        app:titleTextColor="@color/white"/>  <!-- Title text color set to white -->

    <!-- Material CardView to display content inside a card with rounded corners -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"  <!-- CardView takes up full width -->
        android:layout_height="wrap_content"  <!-- Card height adjusts based on content inside -->
        android:layout_margin="16dp"  <!-- Margin around the card to create space between elements -->
        app:cardCornerRadius="16dp"  <!-- Rounded corners for the card -->
        app:cardBackgroundColor="@color/white"  <!-- Set background color to white -->
        android:padding="16dp">  <!-- Padding inside the card for content spacing -->

        <!-- Nested LinearLayout for vertically stacking the TextViews -->
        <LinearLayout
            android:layout_width="match_parent"  <!-- Full width of the parent container -->
            android:layout_height="wrap_content"  <!-- Height adjusts based on content -->
            android:orientation="vertical">  <!-- Stacking elements vertically -->

            <!-- Name TextView to display item name -->
            <TextView android:id="@+id/tvName"
                android:layout_width="wrap_content"  <!-- Width wraps content -->
                android:layout_height="wrap_content"  <!-- Height wraps content -->
                android:textStyle="bold"  <!-- Text is displayed in bold -->
                android:textSize="20sp"/>  <!-- Font size set to 20sp -->

            <!-- Unit price TextView -->
            <TextView android:id="@+id/tvUnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"  <!-- 8dp margin above this TextView -->
                android:text="Precio unidad"/>  <!-- Default text for unit price -->

            <!-- Quantity TextView -->
            <TextView android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"  <!-- 4dp margin above this TextView -->
                android:text="Cantidad"/>  <!-- Default text for quantity -->

            <!-- Total price TextView, bold and larger text size -->
            <TextView android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"  <!-- 8dp margin above this TextView -->
                android:textStyle="bold"  <!-- Bold text for total price -->
                android:textSize="18sp"/>  <!-- Font size set to 18sp -->
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- MaterialButton for the delete action -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDelete"  <!-- Unique ID for referencing in Java/Kotlin -->
        android:layout_width="match_parent"  <!-- Full width button -->
        android:layout_height="wrap_content"  <!-- Height adjusts based on text -->
        android:text="@string/delete"  <!-- Text from resources (delete action) -->
        app:backgroundTint="@color/orange_accent"  <!-- Button background color set to orange accent -->
        android:textColor="@color/white"  <!-- Text color set to white -->
        android:layout_margin="16dp"  <!-- Margin around the button for spacing -->
        app:cornerRadius="16dp"/>  <!-- Rounded corners for the button -->

    <!-- FloatingActionButton for edit action with an icon -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEdit"  <!-- Unique ID for referencing in Java/Kotlin -->
        android:layout_width="wrap_content"  <!-- Wraps content based on the icon size -->
        android:layout_height="wrap_content"  <!-- Wraps content based on the icon size -->
        android:src="@android:drawable/ic_menu_edit"  <!-- Edit icon from system resources -->
        app:tint="@color/white"  <!-- Icon color set to white -->
        app:backgroundTint="@color/orange_accent"  <!-- Floating button background color -->
        android:layout_gravity="end"  <!-- Align button to the right (end of the layout) -->
        android:layout_margin="24dp"/>  <!-- Margin around the button to avoid edge collision -->
</LinearLayout>
