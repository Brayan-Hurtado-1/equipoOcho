<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey_bg">


    <!-- Imagen alusiva a inventario (arriba derecha) -->
    <ImageView
        android:id="@+id/inventoryImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@android:drawable/ic_menu_view"
        android:contentDescription=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>


    <!-- Título Inventory (naranja, bold, centrado) -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/orange_main"
        app:layout_constraintTop_toBottomOf="@id/inventoryImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>


    <!-- Animación Lottie de huella (inferior central) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fingerprintAnim"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:lottie_rawRes="@raw/fingerprint"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>